<Window x:Class="ShmupLevelEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shmup Level Editor" Height="350" Width="525">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <Menu Grid.ColumnSpan="2" Grid.Row="0">
      <MenuItem Header="File">
        <MenuItem Header="New" />
        <MenuItem Header="Save" />
        <MenuItem Header="Open" />
        <MenuItem Header="Exit" />
      </MenuItem>
    </Menu>

    <Grid Grid.Row="1"
          Grid.Column="0">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>

      <StackPanel Grid.Row="0"
                  Orientation="Horizontal">
        <Button Name="AddButton" Click="AddButton_OnClick">Add</Button>
        <Button Name="RemoveButton" Click="RemoveButton_OnClick">Remove</Button>
      </StackPanel>

      <ScrollViewer Grid.Row="1">
        <TreeView Name="WavesEdit"
                  SelectedItemChanged="WavesEdit_OnSelectedItemChanged" />
      </ScrollViewer>

    </Grid>

    <StackPanel Grid.Row="1" Grid.Column="1">

      <Label Content="Before Wave Delay:" />
      <TextBox Text="0" Name="BeforeWaveDelayEdit" />

    </StackPanel>
  </Grid>
</Window>
